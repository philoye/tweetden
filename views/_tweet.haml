%div.tweet
  %img{:src => @user.profile_image_url, :width => 48, :height => 48, :alt => @user.screen_name}
  %p.text= auto_link(tweet.text)
  %p.meta
    %a{:href=>tweet_status_url(tweet.twitter_id)}= pretty_datetime(tweet.created_at)
    via
    =tweet.source
    -if tweet.in_reply_to_status_id
      %a{:href=>tweet_status_url(tweet.in_reply_to_status_id, tweet.in_reply_to_screen_name)}= "in reply to #{tweet.in_reply_to_screen_name}"
