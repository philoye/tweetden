%div.tweet
  %img{:src => @user.attrs.profile_image_url, :width => 48, :height => 48, :alt => @user.screen_name}
  %p.text= auto_link(tweet.text)
  %p.meta
    %a{:href=>tweet_status_url(tweet.tweet_id)}= pretty_datetime(tweet.created_at)
    via
    =tweet.attrs.source
    -if tweet.attrs.in_reply_to_status_id
      %a{:href=>tweet_status_url(tweet.attrs.in_reply_to_status_id, tweet.attrs.in_reply_to_user_id)}= "in reply to #{tweet.attrs.in_reply_to_screen_name}"
